<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="360sp"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:background="@color/blanco"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:padding="15pt"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="sans-serif-black"
            android:paddingBottom="5dp"
            android:text="Edificio"
            android:textAlignment="center"
            android:textColor="@color/colorUtec"
            android:textSize="30sp"
            android:typeface="sans" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_edf_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:inputType="text"
            android:textColor="@color/negro"
            android:textColorHint="@color/negro"
            android:textColorLink="@color/blanco" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_edf_acronimo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Acronimo"
            android:inputType="text"
            android:textColor="@color/negro"
            android:textColorHint="@color/negro"
            android:textColorLink="@color/blanco" />

        <Button
            android:id="@+id/btnEdificio_guardar"
            android:layout_width="match_parent"
            android:layout_height="12pt"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/boton_redondeado_verde"
            android:text="Guardar"
            android:textColor="@color/blanco" />

        <Button
            android:id="@+id/btnEdificio_Eliminar"
            android:layout_width="match_parent"
            android:layout_height="12pt"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/boton_redondeado_rojo"
            android:text="Eliminar"
            android:textColor="@color/blanco" />

        <Button
            android:id="@+id/btnEdificio_salir"
            android:layout_width="match_parent"
            android:layout_height="12pt"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/boton_redondeado_default"
            android:text="Salir"
            android:textColor="@color/negro" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>