<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="360sp"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:background="@color/blanco"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:padding="15pt"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="sans-serif-black"
            android:paddingBottom="5dp"
            android:text="Editar Datos"
            android:textAlignment="center"
            android:textColor="@color/colorUtec"
            android:textSize="30sp"
            android:typeface="sans" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_per_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5pt"
            android:hint="Nombre"
            android:inputType="text"
            android:textColor="@color/negro"
            android:textColorHint="@color/negro"
            android:textColorLink="@color/blanco" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_per_clave1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5pt"
            android:hint="Clave Antigua"
            android:inputType="text"
            android:textColor="@color/negro"
            android:textColorHint="@color/negro"
            android:textColorLink="@color/blanco" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_per_clave2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5pt"
            android:hint="Clave Nueva"
            android:inputType="text"
            android:textColor="@color/negro"
            android:textColorHint="@color/negro"
            android:textColorLink="@color/blanco" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5pt"
            android:hint="Confirmar Clave"
            android:textColorHint="#000000">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="#000000"
                android:textColorHighlight="#1F1F1F"
                android:textColorHint="#000000"
                android:textColorLink="#000000" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_permod_salir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/fab_margin"
                android:layout_weight="1"
                app:backgroundTint="@color/gris"
                app:srcCompat="@drawable/ic_action_back" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_permod_guardar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/fab_margin"
                android:layout_weight="1"
                app:backgroundTint="@color/design_default_color_primary"
                app:srcCompat="@drawable/ic_action_save" />

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>